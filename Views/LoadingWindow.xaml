<Window x:Class="Nikitin.Views.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nikitin.Views"
        mc:Ignorable="d"
        xmlns:modern="http://schemas.modernwpf.com/2019"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        modern:TitleBar.Background="LightSkyBlue"
        modern:WindowHelper.UseModernWindowStyle="True"
        Icon="/Resources/Logo.png"
        Loaded="Window_Loaded" 
        Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    x:Name="MainPanel">
            <Image Source="/Resources/Logo.png" Width="220"/>
            <modern:ProgressBar Foreground="DeepSkyBlue"
                                IsIndeterminate="True" 
                                Width="300"/>
        </StackPanel>
    </Grid>
</Window>
